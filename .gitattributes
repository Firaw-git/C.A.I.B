# Auto-detect text files and ensure consistent line endings
* text=auto

# Set LF line endings for source code
*.js   text eol=lf
*.jsx  text eol=lf
*.ts   text eol=lf
*.tsx  text eol=lf
*.json text eol=lf
*.css  text eol=lf
*.scss text eol=lf
*.html text eol=lf
*.md   text eol=lf
*.yml  text eol=lf
*.yaml text eol=lf
*.sh   text eol=lf
*.env  text eol=lf
*.txt  text eol=lf

# Treat images and binaries as binary (no line-ending changes)
*.png  binary
*.jpg  binary
*.jpeg binary
*.gif  binary
*.ico  binary
*.pdf  binary
*.svg  binary
*.mp3  binary
*.mp4  binary
*.webp binary
*.zip  binary

# Prevent CRLF issues in lock files
package-lock.json text eol=lf
pnpm-lock.yaml    text eol=lf
yarn.lock         text eol=lf
